@model OrderFormModel

@{
    ViewData["Title"] = "Crazy Crank's T-Shirt Factory";
    Layout = "_Layout";
}

<div class="mt-2 mx-2">
    <h1>Crazy Crank's T-Shirt Factory</h1>
</div>
<div class="mt-2 mx-2">
    <p>Order Form</p>
</div>

<form class="container" asp-action="Index" method="post">
    <div class="row">
        <div class="form-group">
            <label asp-for="Qty">Quantity</label>
        </div>
        <div class="col-md-4">
            <input class="col-sm-4 form-control" asp-for="Qty" />
        </div>
        <div>
            <span asp-validation-for="Qty" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="DiscountCode">Discount Code</label>
        </div>
        <div class="col-md-4">
            <input class="col-sm-4 form-control" asp-for="DiscountCode" />
        </div>
        <div class="mt-2">
            @ViewBag.DiscountMessage
        </div>
    </div>
    <button class="btn btn-primary mt-4" type="submit">
    Order
    </button>

    <textarea class="form-control mt-4 border-dark"  rows="6" readonly>
        @ViewBag.Qty T-Shirts at $@ViewBag.PricePerShirt each
        -----------------------------

        Subtotal: $@ViewBag.SubTotal.ToString("0.00")
        Tax: $@ViewBag.Tax.ToString("0.00")
        Total: $@ViewBag.Total.ToString("0.00")

        
    </textarea>
</form>